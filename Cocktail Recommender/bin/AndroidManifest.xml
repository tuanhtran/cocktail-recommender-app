<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.ur.mi.android.cocktailrecommender"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.ur.mi.android.cocktailrecommender.StartActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.ur.mi.android.cocktailrecommender.MenuActivity"
            android:label="@string/title_activity_menu"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="de.ur.mi.android.cocktailrecommender.SearchActivity"
            android:label="@string/title_activity_search"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="de.ur.mi.android.cocktailrecommender.RecipeBookActivity"
            android:label="@string/title_activity_recipe_book"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="de.ur.mi.android.cocktailrecommender.ShoppingListActivity"
            android:label="@string/title_activity_shopping_list"
            android:windowSoftInputMode="adjustPan" >
        </activity>
    </application>

</manifest>